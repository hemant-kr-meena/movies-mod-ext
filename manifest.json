{
  "name": "Movies Mod",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "24": "icons/24px.png",
    "48": "icons/48px.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{b77ae282-cc6b-11ed-afa1-0242ac120002}",
      "update_url": "https://http://apps.mhrlab.in/extentions/movies-mod-updates.json"
    }
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["mod.js"]
    }
  ]
}
